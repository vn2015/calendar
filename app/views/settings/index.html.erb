 <h1>Settings</h1>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th class="text-right">#</th>
      <th class="text-center">Buffer time (min)</th>
      <th>Email for report</th>
      <th>Updated</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @settings.each do |setting| %>

      <tr>
        <td class="text-right"><%= setting.id %></td>
        <td class="text-center"><%= setting.buffer_time %></td>
        <td><%= setting.email_report %></td>
        <td><%=l setting.created_at, format: :short %></td>
        <td>
            <%= link_to 'Edit', edit_setting_path(setting) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

