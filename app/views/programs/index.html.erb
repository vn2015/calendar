<h1>Programs</h1>
<%= link_to 'New Program', new_program_path, class: "btn btn-primary  btn-sm" %>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th class="counter text-center">#</th>
      <th>Name</th>
      <th>Color</th>
      <th>Notes</th>
      <th class="col-sm-1">Action</th>
    </tr>
  </thead>

  <tbody>
    <% i = 0 %>
    <% @programs.each do |program| %>
      <% i += 1 %>
      <tr>
        <td class="text-right"><%=i%></td>
        <td><%= program.name %></td>
        <td bgcolor="<%= program.color %>"><%= program.color %></td>
        <td><%= program.notes %></td>
        <td><%= link_to 'Edit', edit_program_path(program) %>, <%= link_to 'Delete', program, method: :delete, data: { confirm: 'If this program has events, it will also be deleted. Are you sure you want to proceed?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @programs , renderer: BootstrapPagination::Rails %>



