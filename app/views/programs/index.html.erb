<h1>Programs</h1>
  <div class="col-sm-2">
      <%= link_to 'New Program', new_program_path, class: "btn btn-primary  btn-sm" %>
  </div>
  <%= form_tag(programs_path, method: 'get',class:'form-inline') do  %>
  <div class="col-sm-6">
        <%= label_tag "Search by Name:"%>
        <%= text_field_tag "filter_name",@filter_name_val, class: 'form-control' %>
        <%= label_tag "Is Paid:"%>
        <%= radio_button_tag "filter_is_paid", "all", @is_paid_all %> All
        <%= radio_button_tag "filter_is_paid", 1, @is_paid_yes %> Yes
        <%= radio_button_tag "filter_is_paid", 0,@is_paid_no %> No
  </div>
  <div class="col-sm-2">
    <%= submit_tag "Search", class: "btn btn-primary  btn-sm" %>
  </div>

<%end%>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th class="counter text-center">#</th>
      <th>Name</th>
      <th>Color</th>
      <th>Notes</th>
      <th>Is Paid</th>
      <th class="col-sm-1">Action</th>
    </tr>
  </thead>

  <tbody>
    <% i = 0 %>
    <% @programs.each do |program| %>
      <% i += 1 %>
      <tr>
        <td class="text-right"><%=i%></td>
        <td><%= program.name %></td>
        <td bgcolor="<%= program.color %>"><%= program.color %></td>
        <td><%= program.notes %></td>
        <td>
            <%=  program.is_paid==1?'True':'False'  %></td>
        <td><%= link_to 'Edit', edit_program_path(program,request.query_parameters) %>, <%= link_to 'Delete', program, method: :delete, data: { confirm: 'If this program has events, it will also be deleted. Are you sure you want to proceed?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @programs , renderer: BootstrapPagination::Rails %>



