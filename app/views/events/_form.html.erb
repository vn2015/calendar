<%= form_for(event) do |f| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.text_field :title, class: 'form-control', placeholder: 'Name', :required => true %>
  </div>
  <div class="form-group">
    <%= select_tag :meetingtype_id, options_from_collection_for_select(@meetingtypes, "id", "name"),  class: 'form-control', prompt: "Select the meeting type" , :required => true %>
  </div>
  <div class="form-group">
    <%= select_tag :client_id, options_from_collection_for_select(@clients, "id", "username"),  class: 'form-control', :multiple => true, :size => 5,  :required => true %>
  </div>

  <div class="form-group">
    <%= select_tag :program_id, options_from_collection_for_select(@programs, "id", "name"),  prompt: "Select the program", class: 'form-control', :required => true %>
  </div>


  <div class="row">
      <div class="col-xs-6">
        <%= f.label :start %>
        <%= f.text_field :start, class: 'form-control',  :required => true %>
      </div>

      <div class="col-xs-6">
        <%= f.label :end %>
        <%= f.text_field :end, class: 'form-control', :required => true %>
      </div>
  </div>
  <div class="form-group">
    <%= f.label "Break Time (min)" %>
    <%= f.number_field :launch_break, class: 'form-control', :required => true %>
  </div>

  <div class="form-group">
    <%= f.text_field :transport, class: 'form-control', placeholder: 'Transport'%>
  </div>

  <div class="form-group">
    <%= f.text_field :address, class: 'form-control' , placeholder: 'Address'%>
  </div>
  <div class="form-group">
     <%= f.text_area :notes, class: 'form-control' , placeholder: 'Notes'%>
  </div>
<% end %>
